<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_config_settings" model="ir.ui.view">
        <field name="name">Redmine API key</field>
        <field name="model">redmine.timesheets.config.settings</field>
        <field name="priority" eval="20"/>
        <field name="arch" type="xml">
            <form class="oe_form_configuration">
                <header>
                    <button string="Save" type="object" name="execute" class="oe_highlight"/>
                    <button string="Cancel" type="object" name="cancel" class="oe_link" special="cancel"/>
                </header>
                <group string="Api Settings" name="redmine_timesheets">
                    <field name="url"/>
                    <field name="api_key"/>
                </group>
                <group name="timesheets"/>
                <div>
                    <span>(*) This configuration is related to the company you're logged into.</span>
                </div>
            </form>
        </field>
    </record>

    <record id="action_config_settings" model="ir.actions.act_window">
        <field name="name">Configure Redmine API</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">redmine.timesheets.config.settings</field>
        <field name="view_mode">form</field>
        <field name="target">inline</field>
    </record>

    <menuitem id="menu_redmine_timesheet_general_settings" name="Settings" parent="redmine_timesheets_config"
        sequence="0" action="action_config_settings" groups="base.group_system"/>
</odoo>
